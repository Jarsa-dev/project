<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="project_wbs_concept_form" model="ir.ui.view">
            <field name="name">project.wbs.concept.form</field>
            <field name="model">project.wbs.concept</field>
            <field name="arch" type="xml">
                <form string="description">
                    <header/>
                    <sheet>
                        <h1>
                            <separator string="Concept"/>
                            <field name="name"/>
                        </h1>
                        <separator string="Basic Information"/>
                        <group>
                            <field name="product_uom_id"/>
                            <field name="unit_price" widget="monetary"/>
                            <field name="standard_price" widget="monetary"/>
                            <field name="active"/>
                            <field name="account_id"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" placeholder="Share a message..." widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="project_wbs_concept_tree" model="ir.ui.view">
            <field name="name">project.wbs.concept.tree</field>
            <field name="model">project.wbs.concept</field>
            <field name="arch" type="xml">
                <tree string="description">
                    <field name="name"/>
                    <field name="product_uom_id"/>
                    <field name="unit_price" widget="monetary"/>
                    <field name="standard_price" widget="monetary"/>
                    <field name="active"/>
                    <field name="tax_ids"/>
                </tree>
            </field>
        </record>
        <record id="action_project_wbs_concept_form" model="ir.actions.act_window">
            <field name="name">WBS Concepts</field>
            <field name="res_model">project.wbs.concept</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="action_project_wbs_concept_form" id="action_project_wbs_concept_form_menu" name="WBS Concepts" parent="project.menu_project_config" sequence="2"/>
    </data>
</odoo>
