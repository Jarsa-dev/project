<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_analytic_plan_version_tree" model="ir.ui.view">
            <field name="name">analytic.plan.version.tree</field>
            <field name="model">analytic.plan.version</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Analytic Planning Version">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="active"/>                                    
                </tree>
            </field>
        </record>

        <record id="view_analytic_plan_version_search" model="ir.ui.view">
            <field name="name">analytic.plan.version.search</field>
            <field name="model">analytic.plan.version</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Analytic Planning Version">
                  <group>
                      <field name="code"/>
                      <field name="name"/>                                      
                  </group>
                  <group string="Group By..." expand="0">
                    <filter string="Active" context="{'group_by':'active'}"/>                       
                  </group>
                </search>
            </field>
        </record>

        <record id="view_analytic_plan_version_form" model="ir.ui.view">
            <field name="name">analytic.plan.version.form</field>
            <field name="model">analytic.plan.version</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Analytic Planning Version">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>                    
                            <field name="active"/>                          
                            <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                        </group>
                        <notebook>
                            <page string="Notes" name="notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" placeholder="Share a message..." widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="action_analytic_plan_version_form" model="ir.actions.act_window">
            <field name="name">Analytic Planning Versions</field>
            <field name="res_model">analytic.plan.version</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_analytic_plan_version_form"/>            
        </record>
        <menuitem 
            action="action_analytic_plan_version_form" 
            id="analytic_plan_version" 
            parent="menu_analytic"
            sequence="7"/>                              
    </data>
</odoo>
