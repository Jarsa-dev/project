<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_analytic_plan_tree" model="ir.ui.view">
            <field name="name">analytic.plan.tree</field>
            <field name="model">analytic.plan</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Analytic Entries" editable="top">
                    <field name="project_id"/>
                    <field name="account_id" readonly="True"/>
                    <field name="date"/>                    
                    <field name="name"/>
                    <field name="journal_id" invisible="False"/>
                    <field name="analytic_plan_version" />
                    <field name="amount_currency" />
                    <field name="currency_id" />
                    <field name="amount" sum="Total"/>
                    <field name="company_id" invisible="True"/>
                </tree>
            </field>
        </record>
        <record id="view_analytic_plan_form" model="ir.ui.view">
            <field name="name">analytic.plan.form</field>
            <field name="model">analytic.plan</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Analytic Entry">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="project_id"/>
                                <field name="account_id" readonly="True"/>
                                <field name="journal_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="ref"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group string="Amount">
                                <field name="amount_currency"/>
                                <field name="currency_id"/>
                                <field name="amount"/>
                            </group>                     
                        </group>
                        <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" placeholder="Share a message..." widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_analytic_plan_filter" model="ir.ui.view">
            <field name="name">analytic.plan.search</field>
            <field name="model">analytic.plan</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Planning Analytic Lines">
                    <field name="name" string="Analytic Line"/>
                    <field name="date"/>
                    <filter name="sales" string="Sales" domain="[('journal_id.type','=','sale')]" help="Analytic Journal Items related to a sale journal."/>
                    <filter name="purchases" string="Purchases" domain="[('journal_id.type','=','purchase')]" help="Analytic Journal Items related to a purchase journal."/>
                    <filter name="others" string="Others" domain="[('journal_id.type','in',('cash','general','situation'))]"/>
                    <separator/>
                    <field name="account_id"/>
                    <group string="Group By..." expand="0">
                        <filter string="Analytic Account" context="{'group_by':'account_id'}"/>
                        <filter string="Journal" context="{'group_by':'journal_id'}" name="group_journal"/>
                        <separator/>
                        <separator/>
                        <filter string="Date" context="{'group_by':'date'}" name="group_date"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_analytic_plan_graph" model="ir.ui.view">
            <field name="name">analytic.plan.graph</field>
            <field name="model">analytic.plan</field>
            <field name="arch" type="xml">
                <graph string="Analytic line planning" type="bar">
                    <field name="date"/>
                    <field name="amount" operator="+"/>
                </graph>
             </field>
        </record>

        <record id="action_analytic_plan_journal_open_form" model="ir.actions.act_window">
            <field name="name">Analytic Journal Plan Items</field>
            <field name="res_model">analytic.plan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="search_view_id" ref="view_analytic_plan_filter" />
        </record>
        
        <menuitem icon="fa-truck" id="menu_analytic" name="Analytic Plan" sequence="10" parent="base.menu_main_pm"/>
        <menuitem
            action="action_analytic_plan_journal_open_form"
            id="analytic_plan_journal_entries"
            parent="menu_analytic" 
            sequence="6"/>

    </data>
</odoo>
