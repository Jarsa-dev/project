<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_analytic_billing_plan_line_form" model="ir.ui.view">
            <field name="name">analytic.billing.plan.form</field>
            <field name="model">analytic.billing.plan</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Analytic Billing Plan" version="9.0">
                    <header>
                        <button class="oe_highlight" name="action_button_draft" states="confirm" string="Draft" type="object"/>
                        <button class="oe_highlight" name="action_button_confirm" states="draft" string="Confirm" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet string="Resource Plan Lines">
                         <h1>
                            <label class="oe_inline" style="font-size:30px;" string="Billing Request - " attrs="{'invisible':[('name','=', False)]}"/>
                            <field class="oe_inline" name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group col="4" colspan="3">
                                <field name="account_id" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="date" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                            </group>
                            <group col="2" colspan="2" string="Customer Information">
                                <field name="customer_id" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                            </group>
                            <group string="Product Information">
                                <field name="quantity" required="1" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="price_unit" required="1" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="currency_id" required="1" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="amount" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                            </group>
                            <group col="4" colspan="2" groups="analytic.group_analytic_accounting" string="Analytic Information">
                                <field name="ref" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="company_id" groups="base.group_multi_company" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Log Info" attrs="{'invisible':[('move_id', '=', False),('invoice_id', '=', False)]}">
                                <group>
                                    <group>
                                        <field name="move_id" attrs="{'invisible':[('move_id', '=', False)]}" readonly="1"/>
                                    </group>
                                    <group>
                                         <field name="invoice_id" string="Invoice" attrs="{'invisible':[('invoice_id', '=', False)]}" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_analytic_billing_plan_line_tree" model="ir.ui.view">
            <field name="name">analytic.billing.plan.line.tree</field>
            <field name="model">analytic.billing.plan</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="gray:state=='draft';green:state=='confirm';">
                    <field name="name"/>
                    <field name='account_analytic_id'/>
                    <field name="account_id"/>
                    <field name="task_id"/>
                    <field name="customer_id"/>
                    <field name="date"/>
                    <field name="currency_id"/>
                    <field name="quantity"/>
                    <field name="amount"/>
                    <field name="company_id"/>
                    <field name="ref"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_analytic_billing_plan_line_filter" model="ir.ui.view">
            <field name="name">analytic.billing.plan.line.select</field>
            <field name="model">analytic.billing.plan</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search billing plan lines">
                    <group col="6" colspan="5">
                        <field name="account_id"/>
                        <field name="customer_id"/>
                        <field name="name"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_analytic_billing_plan_line_open_form" model="ir.actions.act_window">
            <field name="name">Billing plan</field>
            <field name="res_model">analytic.billing.plan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_analytic_billing_plan_line_filter"/>
        </record>
        <menuitem id="analytic_billing_plan_menu" name="Billing Plan" parent="base.menu_main_pm"/>
        <menuitem action="action_analytic_billing_plan_line_open_form" id="analytic_billing_plan_line_entries" parent="analytic_billing_plan.analytic_billing_plan_menu" sequence="1"/>
    </data>
</odoo>
