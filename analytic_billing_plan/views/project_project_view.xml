<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="project_location_form_view" model="ir.ui.view">
			<field name="name">project.project.form</field>
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.view_project_kanban"/>
			<field name="arch" type="xml">
				<field name="doc_count" position="after">
					<field name="billing_project_total"/>
				</field>
				<xpath expr="//div[@class='o_kanban_primary_left']" position="after">
					<br/>
					<t t-if="record.billing_project_total.value">
						<span>
							<label>Billing Total: $</label>
							<span>
								<t t-esc="record.billing_project_total.value"/>
							</span>
						</span>
					</t>
				</xpath>
			</field>
		</record>
	</data>
</odoo>