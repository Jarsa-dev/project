<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_resource_tree" model="ir.ui.view">
            <field name="name">task.resource.tree</field>
            <field name="model">task.resource</field>
            <field name="arch" type="xml">
                <tree default_order="sequence" editable="bottom" string="Task Resource">
                    <field name="product_id"/>
                    <field name="description"/>
                    <field name="qty" sum="Total qty"/>
                    <field name="uom_id" required="1"/>
                </tree>
            </field>
        </record>
        <record id="view_task_form2" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <header>
                    <button class="oe_highlight" name="action_button_draft" states="confirm" string="Draft" type="object"/>
                    <button class="oe_highlight" confirm="Are you sure you want to confirm the current task?" name="action_button_confirm" states="draft" string="Confirm" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" icon="fa-tasks" name="insume_explotion" string="Insume Explotion" type="object"/>
                </div>
                <field name="user_id" position="after">
                    <field name="uom_id" required="1"/>
                    <field name="qty" sum="Total qty"/>
                    <field name="unit_price" required="1"/>
                    <field name="subtotal"/>
                </field>
                <notebook position="inside">
                    <page name="Resources" string="Resources">
                        <field attrs="{'invisible':[('analytic_account_id', '=', False)]}" name="resource_ids" nolabel="1">
                            <tree default_order="sequence" editable="bottom" string="Resources">
                                <field editable="0" name="account_id"/>
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="resource_type"/>
                                <field name="uom_id" required="1"/>
                                <field name="qty" sum="Total qty"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <notebook position="inside">
                    <page name="total" string="Total">
                        <field invisible="1" name="analytic_account_id"/>
                        <field attrs="{'invisible':[('analytic_account_id', '=', False)]}" name="resource_line_ids" nolabel="1">
                            <tree default_order="sequence" editable="bottom" string="Task Resource">
                                <field editable="0" name="account_id"/>
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="resource_type"/>
                                <field name="uom_id" required="1"/>
                                <field name="qty" sum="Total qty"/>
                                <field name="real_qty" readonly="1" sum="Total real_qty"/>
                                <field name="subtotal"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
        <record model="ir.ui.view" id="view_task_kanban">
            <field name="name">project.task.kanban</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <div>
                        <br/>
                        <label> Total: $</label>
                        <field name="subtotal"/>
                    </div>
                </field>
            </field>
         </record>
         <record id="view_task_tree2" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="code"/>
                </field>
                <field name="project_id"
                       position="after">
                    <field name ="uom_id"/>
                    <field name="qty" sum="Total Qty"/>
                    <field name="unit_price"/>
                    <field name="subtotal" sum="subtotal"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
