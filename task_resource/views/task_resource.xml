<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_resource_tree" model="ir.ui.view">
            <field name="name">task.resource.tree</field>
            <field name="model">task.resource</field>
            <field name="arch" type="xml">
                <tree default_order="sequence" editable="bottom" string="Task Resource">
                    <field name="product_id"/>
                    <field name="description"/>
                    <field name="qty" sum="Total qty"/>
                    <field name="uom_id" required="1"/>
                </tree>
            </field>
        </record>
        <record id="view_task_form2" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" icon="fa-tasks" name="%(action_total_task_resource)d" type="action" string="Insume Explotion"/>
                </div>
                <notebook position="inside">
                    <page name="concepts" string="Concepts">
                        <group>
                            <field name="uom_id" required="1"/>
                            <field name="qty" sum="Total qty"/>
                            <field name="unit_price" required="1"/>
                            <field name="subtotal"/>
                        </group>
                    </page>
                </notebook>
                <notebook position="inside">
                    <page name="total" string="Total">
                        <field name="resource_line_ids">
                            <tree default_order="sequence" editable="bottom" string="Task Resource">
                                <field name="account_id"/>
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="qty" sum="Total qty"/>
                                <field name="uom_id" required="1"/>
                                <field name="subtotal"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
        <record model="ir.ui.view" id="view_task_kanban">
            <field name="name">project.task.kanban</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <div>
                        <br/>
                        <label> Total: $</label>
                        <field name="subtotal"/>
                    </div>
                </field>
            </field>
         </record>
         <record id="view_task_tree2" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="code"/>
                </field>
                <field name="project_id"
                       position="after">
                    <field name ="uom_id"/>
                    <field name="qty" sum="Total Qty"/>
                    <field name="unit_price"/>
                    <field name="subtotal" sum="subtotal"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
