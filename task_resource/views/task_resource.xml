<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_resource_tree" model="ir.ui.view">
            <field name="name">task.resource.tree</field>
            <field name="model">task.resource</field>
            <field name="arch" type="xml">
                <tree default_order="sequence" editable="bottom" string="Task Resource">
                    <field name="product_id"/>
                    <field name="description"/>
                    <field name="qty" sum="Total qty"/>
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>
        <record id="view_task_resource_tree2" model="ir.ui.view">
            <field name="name">task.resource.tree2</field>
            <field name="model">analytic.resource.plan.line</field>
            <field name="arch" type="xml">
                <tree default_order="sequence" editable="bottom" string="Task Resource">
                    <field name="product_id"/>
                    <field name="account_id"/>
                    <field name="date"/>
                    <field name="qty" sum="Total qty"/>
                    <field name="unit_price"/>
                    <field name="subtotal" sum="Total subtotal"/>
                </tree>
            </field>
        </record>
        <record id="view_task_form2" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page name="resources" string="Resources">
                        <field context="{'tree_view_ref':'view_task_resource_tree'}" name="resource_ids" nolabel="1"/>
                    </page>
                </notebook>
                <notebook position="inside">
                    <page name="concepts" string="Concepts">
                        <group>
                            <field name="uom_id"/>
                            <field name="qty" sum="Total qty"/>
                            <field name="unit_price"/>
                            <field name="subtotal"/>
                        </group>
                    </page>
                </notebook>
                <notebook position="inside">
                    <page name="total" string="Total">
                        <field context="{'tree_view_ref':'view_task_resource_tree2'}" name="resource_line_ids"/>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>