<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edit_project" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <div name="button_box" position='inside'>
                    <button string="Resource plan lines"
                        name="%(action_analytic_resource_plan_line_open_form)d"
                        type="action"
                        context="{'default_account_id': analytic_account_id,'search_default_account_id': [analytic_account_id]}"
                        />
                </div>
            </field>
        </record>

        <act_window
            name="Resource plan lines"
            id="resource_plan_line_action_project"
            res_model="analytic.resource.plan.line"
            src_model="project.project"
            context="{'default_account_id': analytic_account_id,'search_default_account_id': [analytic_account_id]}"
            />

    </data>
</odoo>