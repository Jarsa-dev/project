<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_analytic_resource_plan_line_form" model="ir.ui.view">
            <field name="name">analytic.resource.plan.line.form</field>
            <field name="model">analytic.resource.plan.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Analytic resource plan line" version="9.0">
                    <header>
                        <button class="oe_highlight" name="action_button_draft" states="confirm" string="Draft" type="object"/>
                        <button class="oe_highlight" name="action_button_confirm" states="draft" string="Confirm" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet string="Resource Plan Lines">
                        <group col="4" colspan="4">
                            <field name="account_id"/>
                            <field name="name"/>
                            <field name="date"/>
                        </group>
                        <notebook>
                            <page name="human_resources" string="Human Resources">
                                <field name="human_resources_ids"/>
                            </page>
                            <page name="material_resources" string="Material Resources">
                                <field name="material_resources_ids">
                                    <tree editable="top">
                                        <field name="product_id"/>
                                        <field name="product_uom_id"/>
                                        <field name="product_qty"/>
                                        <field name="unit_price"/>
                                        <field name="subtotal"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="other" string="Others">
                                <field name="others_ids">
                                    <tree editable="top">
                                        <field name="product_id"/>
                                        <field name="product_uom_id"/>
                                        <field name="product_qty"/>
                                        <field name="unit_price"/>
                                        <field name="subtotal"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="tools" string="Tools">
                                <field name="tools_ids">
                                    <tree editable="top">
                                        <field name="product_id"/>
                                        <field name="product_uom_id"/>
                                        <field name="product_qty"/>
                                        <field name="unit_price"/>
                                        <field name="subtotal"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="equipment" string="Equipment">
                                <field name="equipment_ids"/>
                            </page>
                            <page name="indirects" string="Indirects">
                                <field name="indirects_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field help="Prueba de Ayuda" name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_analytic_resource_plan_line_tree" model="ir.ui.view">
            <field name="name">view_analytic_resource_plan_line.tree</field>
            <field name="model">analytic.resource.plan.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Analytic Resource Plan">
                    <field name="account_id"/>
                    <field name="human_resources_ids"/>
                    <field name="material_resources_ids"/>
                    <field name="others_ids"/>
                    <field name="tools_ids"/>
                </tree>
            </field>
        </record>
        <record id="view_analytic_resource_plan_line_filter" model="ir.ui.view">
            <field name="name">analytic.resource.plan.line.select</field>
            <field name="model">analytic.resource.plan.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search resource plan lines">
                    <group col="6" colspan="5">
                        <field name="account_id"/>
                        <field name="name"/>
                        <field name="state"/>
                        <field name="material_resources_ids"/>
                        <field name="human_resources_ids"/>
                        <field name="others_ids"/>
                        <field name="tools_ids"/>
                    </group>
                    <group expand="0" name="filters" string="Filters"/>
                    <group expand="0" name="group_by" string="Group By...">
                        <filter context="{'group_by':'account_id'}" domain="[]" string="Analytic Account"/>
                        <filter context="{'group_by':'state'}" domain="[]" string="Status"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_analytic_resource_plan_line_open_form" model="ir.actions.act_window">
            <field name="name">Plan Resources</field>
            <field name="res_model">analytic.resource.plan.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_analytic_resource_plan_line_filter"/>
        </record>
        <menuitem id="analytic_resource_plan_menu" name="Resource Plan" parent="base.menu_main_pm"/>
        <menuitem action="action_analytic_resource_plan_line_open_form" id="analytic_resource_plan_line_entries" parent="analytic_resource_plan_menu" sequence="1"/>
    </data>
</odoo>