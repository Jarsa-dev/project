<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_analytic_resource_plan_line_form" model="ir.ui.view">
            <field name="name">analytic.resource.plan.line.form</field>
            <field name="model">analytic.resource.plan.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Analytic resource plan line">
                    <header>
                        <button class="oe_highlight" name="action_button_draft" states="confirm" string="Draft" type="object"/>
                        <button class="oe_highlight" name="action_button_confirm" states="draft" string="Confirm" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet string="Resource Plan Lines">
                        <div class="oe_right oe_button_box" name="buttons"/>
                        <group>
                            <group col="4" colspan="3">
                                <field name="account_id"/>
                                <field name="name"/>
                                <field name="date"/>
                            </group>
                            <group col="4" colspan="2" string="Product Information">
                                <field name="product_id"/>
                                <field name="unit_amount"/>
                                <field name="product_uom_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="notes" string="Notes">
                                <field name="notes"/>
                            </page>
                            <page name="hierarchy" string="Hierarchy">
                                <group>
                                    <field name="parent_id"/>
                                </group>
                                <group>
                                    <field name="child_ids"/>
                                </group>
                            </page>
                            <page name="costs" string="Costs">
                                <field name="analytic_line_plan_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_analytic_resource_plan_line_tree" model="ir.ui.view">
            <field name="name">analytic.resource.plan.line.tree</field>
            <field name="model">analytic.resource.plan.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="darkmagenta:has_child == True;blue:state=='draft'" editable="top" string="Analytic resource plan line">
                    <field name="account_id"/>
                    <field name="date"/>
                    <field invisible="True" name="name"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="unit_amount"/>
                    <field name="product_uom_id"/>
                    <button icon="gtk-ok" name="action_button_draft" states="confirm" string="Draft" type="object"/>
                    <button icon="gtk-go-forward" name="action_button_confirm" states="draft" string="Confirm" type="object"/>
                    <field name="state"/>
                    <field name="has_child"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>
        <record id="view_analytic_resource_plan_line_filter" model="ir.ui.view">
            <field name="name">analytic.resource.plan.line.select</field>
            <field name="model">analytic.resource.plan.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search resource plan lines">
                    <group col="6" colspan="5">
                        <field name="account_id"/>
                        <field name="product_id"/>
                        <field name="name"/>
                        <field name="parent_id"/>
                        <field name="state"/>
                    </group>
                    <group expand="0" name="filters" string="Filters"/>
                    <group expand="0" name="group_by" string="Group By...">
                        <filter context="{'group_by' : 'parent_id'}" domain="[]" string="Parent"/>
                        <filter context="{'group_by':'account_id'}" domain="[]" string="Analytic Account"/>
                        <filter context="{'group_by':'product_id'}" domain="[]" string="Product"/>
                        <filter context="{'group_by':'state'}" domain="[]" string="Status"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_analytic_resource_plan_line_open_form" model="ir.actions.act_window">
            <field name="name">Plan Resources</field>
            <field name="res_model">analytic.resource.plan.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="search_view_id" ref="view_analytic_resource_plan_line_filter"/>
        </record>
        <menuitem id="analytic_resource_plan_menu" name="Resource Plan" parent="base.menu_main_pm"/>
        <menuitem action="action_analytic_resource_plan_line_open_form" id="analytic_resource_plan_line_entries" parent="analytic_resource_plan_menu" sequence="1"/>
    </data>
</odoo>
