<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_template_sequence_form" model="ir.ui.view">
        <field name="name">product.template.sequence.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="default_code" position="replace">
                <label for="default_code"/>
                <div class="o_row">
                    <field name="default_code"/>
                    <button attrs="{'invisible':['|', ('purchase_ok','=', False), ('default_code', '!=', False)]}" class="oe_link oe_read_only" name="product_sequence" string="Assing Sequence" type="object" colspan="2"/>
                </div>
            </field>
        </field>
    </record>
</odoo>